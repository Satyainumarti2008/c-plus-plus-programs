class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
        // Code here
        int maxsum=arr[0],sum=0;
        for(int i=0;i<arr.size();i++){
            sum+=arr[i];
            if(sum>maxsum)
            maxsum=sum;
            if(sum<0)
            sum=0;
        }
        return maxsum;
    }
};
